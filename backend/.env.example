PORT=5000
DATABASE_URL=postgresql://username:password@localhost:5432/ai_dating_app
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
NODE_ENV=development
REQUIRE_EXTERNAL_SERVICES=true

# CORS (comma-separated origins; omit to allow all in development)
# CORS_ALLOWED_ORIGINS=https://myapp.example.com,https://admin.example.com

# OpenAI Configuration (Required for AI matching)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Google Maps API (Required for location verification)
# Get from: https://console.cloud.google.com/ → APIs & Services → Credentials
# Enable: Geocoding API, Places API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Expo Push Notifications (No API key needed)
# Uses your Expo account (npx expo login)
# App automatically registers push tokens

# SMS OTP (Required for phone verification)
# Twilio: https://console.twilio.com/
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_FROM_NUMBER=+1234567890
# ALLOW_DEV_OTP_BYPASS=true

# Media Upload (Required for chat image/voice in production)
# Cloudinary: https://console.cloudinary.com/
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret
# MEDIA_UPLOAD_FOLDER=greenflag/messages
# MEDIA_ALLOWED_HOSTS=res.cloudinary.com

# Photo Storage (Optional - for production)
# AWS S3: https://aws.amazon.com/s3/
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# Payments (Optional - for premium features)
# Stripe: https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
