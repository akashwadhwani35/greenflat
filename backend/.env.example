PORT=5000
DATABASE_URL=postgresql://username:password@localhost:5432/ai_dating_app
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
NODE_ENV=development

# OpenAI Configuration (Required for AI matching)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Google Maps API (Required for location verification)
# Get from: https://console.cloud.google.com/ → APIs & Services → Credentials
# Enable: Geocoding API, Places API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Yoti Identity Verification (Optional - falls back to demo mode)
# Get credentials from: https://hub.yoti.com/
# 1. Sign up for Yoti Hub account
# 2. Create an Identity Verification application
# 3. Download the private key (.pem file)
# 4. Get your SDK ID and Scenario ID from dashboard
YOTI_SDK_ID=your-yoti-sdk-id
YOTI_PRIVATE_KEY_PATH=/path/to/yoti-private-key.pem
YOTI_SCENARIO_ID=your-scenario-id
YOTI_WEBHOOK_SECRET=your-webhook-secret

# Expo Push Notifications (No API key needed)
# Uses your Expo account (npx expo login)
# App automatically registers push tokens

# SMS OTP (Optional - for phone verification)
# Twilio: https://console.twilio.com/
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# Photo Storage (Optional - for production)
# AWS S3: https://aws.amazon.com/s3/
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# Payments (Optional - for premium features)
# Stripe: https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
